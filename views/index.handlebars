<div class="container">
    <h1 class="center">Shopping List</h1>
    <div class="row">
        <div class="col s6">
            <h2 class="section center">Current List</h2>
            <ul class="collection">
                
                {{#each item}}
                {{#unless purchased}}
                <li class="collection-item">
                    <div class="item-name">
                        {{item_name}}
                    </div>
                    <a class="purchase-item btn-small waves-light waves-effect purple lighten-2" data-id="{{id}}" data-purchased="{{purchased}}">Completed</a>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col s6">

            <h2 class="section center">Completed items</h2>
            <ul class="collection">
                {{#each item}}
                {{#if purchased}}
                <li class="collection-item">
                    <div class="item-name">
                        {{item_name}}
                    </div>
                        <a class="purchase-item btn-small waves-light waves-effect purple lighten-2"  data-purchased="{{purchased}}" data-id="{{id}}">Add again</a>
                        <a class="delete btn-small waves-light waves-effect purple lighten-2" data-purchased="{{purchased}}" data-id="{{id}}"><i class="far fa-trash-alt"></i></a>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>





    <h3 class="center">Add another item</h3>
    <div class="form-box">
        <input type="text" class="new-item" />
        <button class="add-item-button btn waves-light waves-effect purple lighten-2 center">Add item</button>
    </div>
    
</div>